/* pages/notesAdd/notesAdd.wxss */
.notes-add {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  height: 100%;
  flex-direction: column;
}
.notes-add textarea {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;
}
.notes-add-btn {
  display: flex;
  background-color: #CCE6FF;
}
.notes-add-btn .cancel,
.notes-add-btn .sure {
  display: inline-block;
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #869b74;
  border-right: 1px solid #fff;
}